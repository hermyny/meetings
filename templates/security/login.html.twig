{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="vh-60">
    <div class="container h-60 mt-5 mb-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black shadow p-5 mt-5" style="border-radius: 25px;">
                    <div class="card-body px-sm-1 py-sm-3 p-md-5">
                        <div class="row justify-content-center">
                            <div class=" col-12 col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Connectez-vous</p>
    <form class="mx-1 mx-md-4" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw" " style="color: #154863"></i>
                                        <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" style="color: #154863" for="form3Example4c">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        </div>
            </div>

            <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw" style="color: #154863"></i>
                                        <div class="form-outline flex-fill mb-0">
                                        <label for="exampleInputPassword1" class="form-label" style="color: #154863">Mot de passe</label>

        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
        </div>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}
         <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button class="btn btn-lg btn-primary mt-5" style="background-color: #154863" id="formbtn" type="submit">Se connecter</button>
                                    </div>
       
    </form>
     </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="https://img.freepik.com/vecteurs-libre/tiree-reunion-affaires-main_23-2147517040.jpg?t=st=1720775495~exp=1720779095~hmac=54d7622102688205c9f4941805e2a8b7ecb790eaf564d6aad3d826d8162c924e&w=740"
                                     class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
