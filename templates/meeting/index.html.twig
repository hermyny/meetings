{% extends 'base.html.twig' %}

{% block title %}Meeting index{% endblock %}

{% block body %}

<div class =container>
    <h1 class= "text-center">Liste des réunions</h1>

    <a button type="button" class="btn btn-primary" href="{{ path('app_meeting_new') }}">Créez une nouvelle réunion</button></a>

     

    <table class="table table-striped">
        <thead>
            <tr>
                
                <th scope="col">Titre</th>
                <th scope="col">Ordre du jour</th>
                <th scope="col">Date</th>
                <th scope="col">Heure</th>
                <th scope="col">Modification</th>
            </tr>
        </thead>
        <tbody>
        {% for meeting in meetings %}
            <tr>
                
                    <td>{{ meeting.title }}</td>
                    <td>{{ meeting.agenda }}</td>
                    <td>{{ meeting.date ? meeting.date|date('Y-m-d') : '' }}</td>
                    <td>{{ meeting.time ? meeting.time|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_meeting_show', {'id': meeting.id}) }}">show</a>
                    <a href="{{ path('app_meeting_edit', {'id': meeting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

   
{% endblock %}
