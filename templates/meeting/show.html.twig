{% extends 'base.html.twig' %}

{% block title %}Meeting{% endblock %}

{% block body %}
    <h1>Meeting</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meeting.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ meeting.title }}</td>
            </tr>
            <tr>
                <th>Agenda</th>
                <td>{{ meeting.agenda }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ meeting.date ? meeting.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ meeting.time ? meeting.time|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_meeting_index') }}">back to list</a>

    <a href="{{ path('app_meeting_edit', {'id': meeting.id}) }}">edit</a>

    {{ include('meeting/_delete_form.html.twig') }}
{% endblock %}
